{
	"coc.preferences.diagnostic.enable": false,
	"list.maxPreviewHeight": 32,
	"languageserver": {
		"ccls": {
			"command": "ccls",
			// "args": ["-log-file=/tmp/ccls.log", "-v=1"],
			"filetypes": ["c", "cpp", "objc", "objcpp"],
			"rootPatterns": [".ccls", ".vim/", "compile_commands.json", ".hg/"],
			"initializationOptions": {
				"cache": {
					"directory": "/opt/jcolledge/cache/ccls"
				},
				"index": {
					"onChange": true
				}
			}
		}
	}
}
